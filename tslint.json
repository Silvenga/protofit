{
    "extends": "tslint:recommended",
    "rules": {
        "member-ordering": false,
        "prefer-const": false,
        "arrow-parens": false,
        "max-line-length": false,
        "max-classes-per-file": false,
        "eofline": false,
        "space-before-function-paren": false,
        "triple-equals": false,
        "variable-name": {
            "options": [
                "allow-leading-underscore",
                "allow-pascal-case"
            ]
        },
        "trailing-comma": false,
        "ordered-imports": false,
        "member-access": {
            "options": [
                "check-accessor",
                "check-constructor"
            ]
        }
    }
}